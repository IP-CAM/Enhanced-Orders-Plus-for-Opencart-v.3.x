<modification>
	<name>#ocmod.space | Enhanced Orders > Journal3</name>
	<code>enhanced-orders--journal3</code>
	<version>2.0.0</version>
	<author>Andrii Burkatskyi aka underr</author>
	<link>https://www.opencart.com/index.php?route=marketplace/extension&amp;filter_member=ocmod.space</link>


<!-- Journal 3 Account -->

    <file path="catalog/view/theme/journal3/template/account/order_info.twig" error="log">
        <operation>
            <search>
                <![CDATA[<td class="text-right">{{ product.price }}</td>]]>
            </search>
            <add position="replace">
                <![CDATA[<td class="text-right text-nowrap">{{ product.price }}</td>]]>
            </add>
        </operation>
        <operation>
            <search>
                <![CDATA[<td class="text-right">{{ product.total }}</td>]]>
            </search>
            <add position="replace">
                <![CDATA[<td class="text-right text-nowrap">{{ product.total }}</td>]]>
            </add>
        </operation>
        <operation>
            <search>
                <![CDATA[<td class="text-right">{{ total.text }}</td>]]>
            </search>
            <add position="replace">
                <![CDATA[<td class="text-right text-nowrap">{{ total.text }}</td>]]>
            </add>
        </operation>
    </file>

</modification>

